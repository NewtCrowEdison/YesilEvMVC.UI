@model List<YesilEvMVC.UI.ViewModels.AktiviteVM>
@{
    ViewBag.Title = "Aktivite Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-success text-center mb-4">⚡ Aktivite Listesi</h2>

    <div class="mb-3 text-end">
        <a class="btn btn-success" href="/Admin/AktiviteEkle">
            <i class="bi bi-plus-circle me-1"></i>Yeni Aktivite Ekle
        </a>
    </div>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-success text-center">
            <tr>
                <th>ID</th>
                <th>Aktivite Adı</th>
                <th>Aktivite Puanı</th>
                <th>Aktivite Zamanı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aktivite in Model)
            {
                <tr>
                    <td class="text-center">@aktivite.Id</td>
                    <td>@aktivite.AktiviteAdi</td>
                    <td class="text-center">@aktivite.AktivitePuani</td>
                    <td class="text-center">@aktivite.AktiviteZamani.ToString("dd.MM.yyyy HH:mm")</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-warning me-1" href="/Admin/AktiviteDuzenle/@aktivite.Id">
                            <i class="bi bi-pencil-square"></i> Düzenle
                        </a>
                        <a class="btn btn-sm btn-danger" href="/Admin/AktiviteSil/@aktivite.Id"
                           onclick="return confirm('Bu aktiviteyi silmek istediğinize emin misiniz?');">
                            <i class="bi bi-trash3-fill"></i> Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
