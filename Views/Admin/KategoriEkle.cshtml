@model YesilEvMVC.UI.ViewModels.KategoriVM
@{
    ViewBag.Title = "Kategori Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-success text-center mb-4">📂 Yeni Kategori Ekle</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" asp-action="KategoriEkle" class="border p-4 rounded shadow-sm bg-light">
                <div class="mb-3">
                    <label asp-for="KategoriAdi" class="form-label">Kategori Adı</label>
                    <input asp-for="KategoriAdi" class="form-control" />
                    <span asp-validation-for="KategoriAdi" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle me-1"></i> Ekle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
