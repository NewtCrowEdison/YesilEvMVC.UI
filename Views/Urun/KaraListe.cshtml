@model List<YesilEvMVC.UI.Models.KullaniciKaraListe>
@{
    ViewBag.Title = "Kara Liste";
    Layout = "_Layout";
}

<h2 class="text-danger mb-4">Kara Listem</h2>

@if (!Model.Any())
{
    <p class="text-muted">Henüz kara listeye içerik eklemediniz.</p>
}
else
{
    <ul class="list-group">
        @foreach (var madde in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>@madde.UrunIcerik.IcerikAdi</strong><br />
                    <small class="text-muted">@madde.UrunIcerik.Aciklama</small>
                </div>
            </li>
        }
    </ul>
}
